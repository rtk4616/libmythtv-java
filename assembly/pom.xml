<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>libmythtv-assembly</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.syphr</groupId>
		<artifactId>libmythtv-java</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>

	<name>Assembly</name>
	<description>This module builds the final assemblies containing the other modules.</description>

	<dependencies>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-api</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-control</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-data</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-db</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-example</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-http</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-protocol</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.syphr</groupId>
			<artifactId>libmythtv-util</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>sonatype-oss-release</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						
						<configuration>
							<finalName>${project.parent.build.finalName}</finalName>
						
							<descriptors>
								<descriptor>src/main/assembly/bin.xml</descriptor>
								<descriptor>src/main/assembly/bin-example.xml</descriptor>
								<descriptor>src/main/assembly/src.xml</descriptor>
							</descriptors>
						</configuration>
		
						<executions>
							<execution>
								<id>build-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>