<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="org.syphr.mythtv.db.schema.impl.1264">
		<description>MythTV database schema version for 0.24</description>

		<class>org.syphr.mythtv.db.schema.impl.Channel1264</class>
		<class>org.syphr.mythtv.db.schema.impl.Program1264</class>
		<class>org.syphr.mythtv.db.schema.impl.ProgramId1264</class>
		<class>org.syphr.mythtv.db.schema.impl.Recorded1264</class>
		<class>org.syphr.mythtv.db.schema.impl.RecordedId1264</class>
		<class>org.syphr.mythtv.db.schema.impl.Settings1264</class>
		<class>org.syphr.mythtv.db.schema.impl.SettingsId1264</class>
		<class>org.syphr.mythtv.db.schema.impl.TvChain1264</class>
		<class>org.syphr.mythtv.db.schema.impl.TvChainId1264</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			
			<property name="hibernate.archive.autodetection" value="none" />
			<property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
		</properties>
	</persistence-unit>
	
